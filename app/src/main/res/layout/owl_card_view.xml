<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="8dp"
    app:cardBackgroundColor="#1a2469"
    app:cardCornerRadius="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp">

        <ImageView
            android:id="@+id/owl_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginVertical="5dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="#FFFFFF"
            tools:ignore="ContentDescription"
            tools:src="@drawable/baseline_draw_24" />

        <ImageView
            android:id="@+id/card_view_image_border"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginVertical="5dp"
            android:src="@drawable/border_small_resource"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/owl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1.6"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/owl_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Owls Name" />

        <TextView
            android:id="@+id/owl_latin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#000000"
            android:shadowDx="1.3"
            android:shadowDy="1.3"
            android:shadowRadius="1"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@id/owl_name"
            app:layout_constraintTop_toBottomOf="@id/owl_name"
            tools:text="latin name" />

        <TextView
            android:id="@+id/owl_wingspan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#000000"
            android:shadowDx="1.3"
            android:shadowDy="1.3"
            android:shadowRadius="1"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/owl_latin_name"
            app:layout_constraintTop_toBottomOf="@id/owl_latin_name"
            tools:text="50 (wingspan)" />

        <TextView
            android:id="@+id/owl_habitat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#000000"
            android:shadowDx="1.3"
            android:shadowDy="1.3"
            android:shadowRadius="1"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/owl_wingspan"
            app:layout_constraintTop_toBottomOf="@id/owl_wingspan"
            tools:text="habitat" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>